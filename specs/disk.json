{
    "$schema": "https://raw.githubusercontent.com/pedro00dk/ptray/master/schema/schema.json",
    "name": "disk",
    "interval": 30,
    "command": [
        "df",
        "-BM"
    ],
    "filter": {
        "match": "(?imux) ^ /dev/sd[^\\s]+ .+ $"
    },
    "extract": [
        {
            "key": {
                "from": 0,
                "to": 1000
            },
            "data": "(?imux) ^ (?P<drive>[^\\s]+) \\s+ (\\d+) M \\s+ (\\d+) M \\s+ (\\d+) M \\s+ (?P<used>\\d+) % (?P<mount>.*) $"
        }
    ]
}